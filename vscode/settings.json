{
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "'FiraMonoNFM-Regular', Menlo, Monaco, monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.indentation": false,
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 110,
  "editor.parameterHints.cycle": true,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [80, 110],
  "editor.scrollBeyondLastLine": true,
  "editor.showFoldingControls": "always",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 110,

  "files.autoSave": "onWindowChange",
  "files.autoSaveWorkspaceFilesOnly": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.apns": "json",
    "*.gpx": "xml",
    "*.podspec": "ruby",
    "apple-app-site-association": "json",
    "Dangerfile": "ruby",
    "Fastfile": "ruby",
    "Gemfile": "ruby",
    "Package.resolved": "json",
    "Podfile": "ruby",
    "Vagrantfile": "ruby"
  },
  "files.exclude": {
    "**/venv": true,
    "**/.vscode": true,
    "**/.pytest_cache": true,
    "**/.sass-cache": true
  },

  "workbench.colorTheme": "Base16 Tomorrow Night",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.openPositioning": "last",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.tabCloseButton": "left",
  "workbench.enableExperiments": false,
  "workbench.fontAliasing": "auto",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,
  "workbench.tips.enabled": false,

  "window.closeWhenEmpty": true,
  "window.openFilesInNewWindow": "default",
  "window.openFoldersInNewWindow": "on",
  "window.systemColorTheme": "auto",

  "task.allowAutomaticTasks": "off",

  "explorer.decorations.colors": false,

  "search.useGlobalIgnoreFiles": true,

  "extensions.closeExtensionDetailsOnViewChange": true,

  "terminal.explorerKind": "external",

  "telemetry.telemetryLevel": "off",

  "git.countBadge": "tracked",
  "git.ignoreLegacyWarning": true,
  "git.ignoreLimitWarning": true,
  "git.ignoreMissingGitWarning": true,
  "git.inputValidationLength": 72,

  "scm.diffDecorationsGutterWidth": 1,
  "scm.diffDecorations": "gutter",

  "markdown.preview.fontSize": 13,
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "linting.enabled": true,
    "linting.pylintEnabled": false,
    "linting.flake8Enabled": true
  },

  "rubyLsp.formatter": "auto",

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "circleci.notifications.areActive": "no",
  "circleci.filters.myPipelinesOnly": true,

  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",

  "markdownlint.config": {
    "blanks-around-headings": {
      "lines_above": 1,
      "lines_below": 0
    },
    "no-duplicate-heading": {
      "siblings_only": true
    }
  }
}
